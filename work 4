#include <iostream>
#include <fstream>
#include <cstdlib>
#include <clocale>
#include <string>
using namespace std;
int main()
{
	string path = "C:\\alaba\\lab.txt";
	ifstream file;
	file.open(path);
	setlocale(LC_ALL, "rus");

	if (file.is_open()) 
		cout <<"File is open." << endl;
	else
	{
		cout << "File is not open" << endl;
		return -1;
	}
	int n = 519;
	char* buffer = new char[n + 1]; buffer[n] = 0;
	file.read(buffer, n);
	cout << buffer;
	delete[] buffer;
}
